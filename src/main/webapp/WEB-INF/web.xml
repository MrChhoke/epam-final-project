<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/CASH_REGISTER</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/node_modules/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>WelcomePage</servlet-name>
        <jsp-file>/WEB-INF/jsp-pages/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>WelcomePage</servlet-name>
        <url-pattern>/index.jsp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Registration</servlet-name>
        <jsp-file>/WEB-INF/jsp-pages/registration.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/registration.jsp</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Login</servlet-name>
        <jsp-file>/WEB-INF/jsp-pages/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login.jsp</url-pattern>
    </servlet-mapping>

    <error-page>
        <exception-type>com.epam.cash.register.exception.ForbiddenException</exception-type>
        <location>/WEB-INF/jsp-pages/forbidden.jsp</location>
    </error-page>
</web-app>